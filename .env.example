# Database Connection
# Local PostgreSQL connection string or remote database URL
DATABASE_URL="postgresql://user:password@localhost:5432/gamerev"

# NextAuth Configuration
# Run `npx auth secret` to generate a new secret
AUTH_SECRET="your_auth_secret_here"

# Twitch / IGDB API (Required)
# Register at https://dev.twitch.tv/console
TWITCH_CLIENT_ID="your_twitch_client_id"
TWITCH_CLIENT_SECRET="your_twitch_client_secret"
# IGDB_BASE_URL="https://api.igdb.com/v4" # Optional, defaults to this value

# RAWG API (Required)
# Get a free API key at https://rawg.io/apidocs
RAWG_API_KEY="your_rawg_api_key"
# RAWG_BASE_URL="https://api.rawg.io/api" # Optional, defaults to this value

# OpenCritic API (Required)
# Get an API key via RapidAPI: https://rapidapi.com/opencritic-opencritic-default/api/opencritic-api
OPENCRITIC_API_KEY="your_opencritic_api_key"
# OPENCRITIC_BASE_URL="https://opencritic-api.p.rapidapi.com" # Optional, defaults to this value

# Google reCAPTCHA v3 (Optional for Development)
# Register at https://www.google.com/recaptcha/admin
# If not provided, reCAPTCHA verification is bypassed in development
# NEXT_PUBLIC_RECAPTCHA_SITE_KEY="your_recaptcha_site_key"
# RECAPTCHA_SECRET_KEY="your_recaptcha_secret_key"
